

<h1>
  <%= "Gathered Products (" + @products.count.to_s + ")" %>
  <%= link_to "Download as CSV", "/products.csv?key=#{@products.last.source}", :class => "pull-right btn btn-success white", :id => "download-button" %>
</h1>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Model</th>
          <th>ASIN</th>
          <th>MRP</th>
          <th>Sale</th>
          <th>Link</th>
          <th>Source</th>
          <!--
          <th colspan="3"></th>
          --!>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.model %></td>
            <td><%= product.asin %></td>
            <td><%= product.mrp %></td>
            <td><%= product.sale %></td>
            <td><%= product.link %></td>
            <td><%= Base64.strict_decode64(product.source) %></td>
            <!--
            <td>
              <%= link_to 'Show', product %> |
              <%= link_to 'Edit', edit_product_path(product) %> |
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
            --!>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

